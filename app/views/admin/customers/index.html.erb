<div class='container'>
  <div class='row'>
    <div class="d-inline-block px-3 m-3" style="background-color: #eee;">
      <h2 class="m-0">会員一覧</h2>
    </div>

        <table class="table table">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>
            <% @customer.each do |customer| %>
              <tr>
                <td>
                  <%= customer.id %>
                </td>
                <td>
                <%= link_to admin_customers_path(customer), style: "text-decoration: underline;" do%>
                  <%= customer.last_name %>　<%= customer.first_name %>
                <% end %>
                </td>
                <td>
                  <%= customer.email%>
                </td>
                <% if customer.is_deleted == false %>
          　　　　　　<td class = "text-success font-weight-bold">有効</td>
            	  　<%else%>
          　　　　　　<td class = "text-danger font-weight-bold">退会</td>
            	  <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>

    <div class="row justify-content-center">
      <%= paginate @customer %>
    </div>
  </div>
</div>