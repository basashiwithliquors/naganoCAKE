<!DOCTYPE html>
<div class="container">
  <div class="row">
    <div class='col-md-8'>
      <div class="d-inline-block px-3 m-3" style="background-color: #eee;">
        <h3 class="m-0">
        <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
      </div>

      <table class="table table-borderless">
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
      </tr>
       <tr>
        <td>郵便番号</td>
        <td><%= @customer.postcode %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.phone %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td colspan='2'>
          <% if @customer.is_deleted == true %>
          <div class="text-secondary font-weight-bold">退会</div>
          <% else %>
          <div class="text-success font-weight-bold">有効</div>
          <% end %>
          </td>
      </tr>
        <tfoot>
          <tr>
            <td></td>
            <td><%= link_to "編集する", edit_admin_customer_path,class: "btn btn-success" %></td>
            <td><%= link_to "注文履歴一覧を見る", admin_orders_path,class: "btn btn-primary" %></td>
          </tr>
        </tfoot>
    </table>
  </div>
 </div>
</div>