<div class="container">
  <h4 class= "my-4 px-4 offset-md-1 d-inline-block", style="background-color: #eee;">商品詳細</h4>
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.get_image, size:'320x180' %>
    </div>
    <table class="table table-borderless col-md-8">
      <tr><td style="width: 20%">商品名</td><td class="h5"><%= @item.name %></td></tr>
      <tr><td style="width: 20%">商品説明</td><td class="h5"><%= @item.description %></td></tr>
      <tr><td style="width: 20%">ジャンル</td><td class="h5"><%= @item.genre.name %></td></tr>
      <tr><td style="width: 20%">税込価格<br>（税抜価格）</td>
        <td><h5 class="d-inline-block"><%= @item.price_in_tax %>
        （<%= @item.price_ex_tax %>）</h5>円</td>
      </tr>
      <tr><td style="width: 20%">販売ステータス</td>
        <td class = "font-weight-bold h5">
          <% if @item.is_active == true %>
            <div class = "text-success">販売中</div>
          <% else %>
            <div class = "text-black-50">販売停止中</div><% end %>
        </td>
      </tr>
    </table>
  </div>
  <div class="row text-center">
    <%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success btn-lg p-2 mx-auto' %>
  </div>
</div>