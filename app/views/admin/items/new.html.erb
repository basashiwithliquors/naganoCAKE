  <h2 class="ml-4">商品新規登録</h2>
  
  <%= form_with model: [:admin, @item], local: true do |f| %>
     <div class="form-group row">
      <div class="col-sm-2">
        <%= f.label :商品画像 %>
      </div>
      <div class="col-sm-10">
      <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2">
        <%= f.label :商品名 %>
      </div>
      <div class="col-sm-10">
      <%= f.text_field :name, placeholder: "商品名",class: 'form-control item_title' %>
      </div>
    </div>
    
    <div class="form-group row">
      <div class="col-sm-2">
        <%= f.label :商品説明 %>
      </div>
      <div class="col-sm-10">
        <%= f.text_area :description, placeholder: "ここに説明を記述します", class: 'form-control item_description' %>
      </div>
    </div>
    
    <div class="form-group row">
      <div class="col-sm-2">
        <%= f.label :ジャンル %>
      </div>
      <div class="col-sm-10">
      <%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: '--選択してください--'}, class: 'form-control item_genre' %>
      </div>
    </div>
    
    <div class="form-group row">
      <div class="col-sm-2">
        <%= f.label :税抜価格 %>
      </div>
      <div class="col-sm-10">
      <%= f.text_field :price_without_tax, placeholder: "1,000", class: 'form-control item_price' %>円
      </div>
    </div>
    
    <div class="form-group row">
      <div class="col-sm-2">
        <%= f.label :販売ステータス %>
      </div>
      <div class="col-sm-10">
      <%= f.radio_button :is_active, "true" %>販売中
      <%= f.radio_button :is_active, "false" %>売切れ
      </div>
    </div>
    
    <div class="form-group">
      <%= f.submit "新規登録", class: 'btn btn-success' %>
    </div>
  <% end %>
