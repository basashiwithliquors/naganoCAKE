<h2>注文履歴一覧</h2>

<table>
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <!-- lメソッドを使って書式を指定する -->
      <td><%= l order.created_at %></td>
      <td>〒<%= order.postcode %><br>
        <%= order.address %><br>
        <%= order.name %>
      </td>
      <td>
        <% order.order_items.each do |order_item| %>
          <%= order_item.item.name %><br>
        <% end %>
      </td>
      <!--/confirmに入っている金額の情報を持ってくるには？-->
      <td><%= order.billing_amount.to_s(:delimited) %></td>
      <td><%= order.order_status %></td>
      <td><%= link_to "表示する", order_path(order) %></td>
    </tr>
  <% end %>
</table>