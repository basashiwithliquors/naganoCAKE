<h4>注文情報確認</h4>
<table>
  <th>商品名</th>
  <th>単価(税込)</th>
  <th>数量</th>
  <th>小計</th>
  </tr>
  <!--合計金額total初期化-->
  <% total = 0 %>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= attachment_image_tag(cart_item.item, :image, size: "60x50", fallback: "no_image.jpg") %>
          <%= cart_item.item.name %>
        </td>
        <td><%= (cart_item.item.price*1.08).to_i %></td>
        <td><%= cart_item.quantity %></td>
        <td>
          <% subtotal = ((cart_item.item.price*cart_item.quantity)*1.1).to_i %> <!--小計の計算-->
          <%= subtotal %> <!--小計を表示-->
        </td>
      </tr>
    <!--アイテムごとに合計金額に加算-->
    <% total += (cart_item.item.price_without_tax*cart_item.quantity)*1.1 %>
  <% end %>
</table>

<table>
  <tr>
    <th>送料</th>
    　<td><%= @order.postage %></td>
  </tr>
  <tr>
    <th>商品合計</th>
    <td><%= total.to_i %></td>
  </tr>
  <tr>
    <th>請求金額</th>
    <% @order.billing_amount = @order.postage + total.to_i %>
    <td><%= @order.billing_amount %></td>
  </tr>
</table>

<table>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method_i18n %></td>
  </tr>
  <tr>
    <th>お届け先</th>
    <td>
    <%= @order.postcode %>
    <%= @order.address %>
    <%= @order.name %>
    </td>
  </tr>
</table>

<%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :customer_id %>
  <%= f.hidden_field :postage %>
  <%= f.hidden_field :billing_amount %>
  <%= f.hidden_field :payment_method %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :postcode %>
  <%= f.hidden_field :order_status %>
  <%= f.submit "注文を確定する", class: "btn btn-success" %>
<% end %>
