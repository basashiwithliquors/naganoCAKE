<div class="container">
    <div class="d-inline-block px-3 m-3" style="background-color: #eee;">
      <h2 class="m-0">会員情報編集</h2>
    </div>

      <%= form_with model: @customer, url: public_customers_information_path, method: :patch, local:true do |f| %>
      <table class="table table-borderless table-sm">
        <div class="field">
          <tr>
          <td><%= f.label :"名前" %></td>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
          </tr>
        </div>

        <div class="field">
          <tr>
          <td><%= f.label :"フリガナ" %></td>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
          </tr>
        </div>

        <div class="field">
          <tr>
          <td><%= f.label :"メールアドレス" %></td>
          <td><%= f.text_field :email %></td>
          </tr>
        </div>

        <div class="field">
          <tr>
          <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
          <td><%= f.text_field :postcode %></td>
          </tr>
        </div>

        <div class="field">
          <tr>
          <td><%= f.label :"住所" %></td>
          <td><%= f.text_field :address, class: "w-100" %></td>
          </tr>
        </div>

        <div class="field">
          <tr>
          <td><%= f.label :"電話番号(ハイフンなし)" %></td>
          <td><%= f.text_field :phone %></td>
          </tr>
        </div>

        <div class="field">
         <td><%= f.submit"編集内容を保存", class: "btn btn-success" %></td>
         <td><%= link_to "退会する", public_customers_unsubscribe_path(current_customer), class: "btn btn-danger" %></td>
        </div>

       </table>
      <% end %>
    </div>
  </div>
</div>