<div class="container">
  <div class="row">
    <div class="col-md-2 mt-4">
      <%= render "sidebar", genres: @genres %>
    </div>
  
    <div class="col-md-10">
      <div class="row">
        <div class= "my-4 px-4">
          <% if @genre_p != nil %>
            <h4 class="d-inline-block"><%= @genre.name %>一覧</h4>（全<%= @genre_search.count %>件）
          <% elsif params[:word] != nil%>
            <h4 class="d-inline-block">"<%= @word %>"の検索結果</h4>（全<%= @word_search.count %>件）
          <% else %>
            <h4 class="d-inline-block">商品一覧</h4>（全<%= Item.where(is_active: true).count %>件）
          <% end %>
        </div>
      </div>

      <div class="row">
        <% @items.each do |item| %>
        <div class="col-md-3 mb-5 inline-block">
          <%= link_to item_path(item), class: "text-reset" do %>
    
          <div><%= image_tag item.get_image, size:'208x117' %></div>
          <div><%= item.name %></div>
          <div>¥<%= item.price_in_tax %></div>
          <% end %>
        </div>
          <% end %>
      </div>
  
      <div class="d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>