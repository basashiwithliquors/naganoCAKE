<div class="container">
  <div class="row">
    <div class= "my-4 px-4">
      <h4 class="d-inline-block">商品一覧</h4>（全<%= Item.where(is_active: true).count %>件）
    </div>
  </div>

  <div class="row">
    <% @items.each do |item| %>
    <div class="col-md-3 mb-5 inline-block">
      <%= link_to public_item_path(item), class: "text-reset" do %>
      <div><%= image_tag item.get_image, size:'240x135' %></div>
      <div><%= item.name %></div>
      <div>¥<%= item.price_in_tax %></div>
      <% end %>
    </div>
      <% end %>
  </div>

  <div class="d-flex justify-content-center">
    <%= paginate @items %>
  </div>
</div>