<% if ShippingAddress.exists?(customer_id: current_customer.id) %>
  <table class="table table-responsive pt-4">
    <thead class="thead-light table-bordered">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="table-bordered">
      <% shipping_addresses.each do |shipping_address| %>
      <tr>
        <td class="align-middle"><%= shipping_address.postcode %></td>
        <td class="align-middle"><%= shipping_address.address %></td>
        <td class="align-middle"><%= shipping_address.name %></td>
        <td class="text-center"><%= link_to "編集する", edit_shipping_address_path(shipping_address), class: 'btn btn-success px-2' %>
        <%= link_to "削除する", shipping_address_path(shipping_address), method: :delete, remote: true, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger px-2' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
<% end %>