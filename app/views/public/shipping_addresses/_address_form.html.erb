<%= form_with model: @shipping_address, local: false do |f| %>
  <div class="form-group row">
    <div class="col-sm-3">
      <%= f.label :郵便番号（ハイフンなし） %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :postcode, placeholder: "0000000", class: 'form-control shipping_address_postcode' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <%= f.label :住所 %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :address, placeholder: "東京都渋谷区世代々木神園町0-0", class: 'form-control shipping_address_address' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <%= f.label :宛名 %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :name, placeholder: "令和道子", class: 'form-control shipping_address_name' %>
    </div>
    <div class="col-sm-2 offset-sm-3">
      <% if params[:id] == nil %>
        <%= f.submit "新規登録", class: 'btn btn-success px-4' %>
      <% else %>
        <%= f.submit "変更内容を保存", class: 'btn btn-success px-2' %>
      <% end %>
    </div>
  </div>
<% end %>
